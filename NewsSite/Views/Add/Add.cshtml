@model IQueryable<NewsSite.Data.Models.News>

<div id="content">
    <div class="container">
        <div class="text-center">

            @foreach (News entity in Model)
            {
                <div>
                    Заголовок: @entity.name

                    <form asp-controller="Add" asp-action="DeleteNews" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#content" data-ajax-method="post">
                        <input type="hidden" value="@entity.id" name="id" />
                        <input type="submit" value="Удалить" />
                    </form>
                </div>
            }

        </div>
    </div>
</div>
<div id="content"></div>

